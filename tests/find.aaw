begin findtest:
  let arr::int[20];

  main:
    let res, y, num::int;
    res <- -1;
    mirror("tests/test.mrr", arr);
    input("Insert the number you're looking for:", num);

    for y <- 0:size(arr):
      if num == arr[y] then:
        res <- y;
      end
    end

    if res == -1 then:
      print("The number was not found in the array!");
    else:
      print("The number was found at index:", res);
    end
  end
endprog
